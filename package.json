{
  "name": "play",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run copy:src && npm run copy:modules && npm run babel",
    "build:js:watch": "babel dist -d dist --ignore \"dist/web_modules/*.js\" --watch",
    "build:ts": "rm -rf dist && tsc",
    "build:ts:watch": "tsc -w",
    "clean": "rm -rf dist",
    "dev:build": "npm run copy:src && npm run babel",
    "watch": "npm run clean && mkdir dist && npm run copy:modules && npm run dev:build && chokidar \"src/**/*\" -c \"npm run dev:build\"",
    "babel": "babel src --extensions .js,.ts,.tsx,.jsx -d dist",
    "copy:src": "copyfiles \"src/*.html\" \"src/**/*.gif\" \"src/*.css\" dist -u 1",
    "copy:modules": "cp -r web_modules dist/web_modules",
    "dev": "npm run clean && npm run copy && concurrently \"npm run babel -- --watch\" \"serve -s dist\"",
    "lint": "eslint --ext .ts,.tsx src --ignore \"web_modules/**/*.js\"",
    "prestart": "npm run build",
    "start": "serve -s dist"
  },
  "keywords": [],
  "author": "Nikhil Saraf",
  "license": "ISC",
  "@pika/web": {
    "webDependencies": [
      "goober",
      "styled-system",
      "preact",
      "preact/hooks",
      "preact/debug",
      "smooshpack",
      "codesandbox-api"
    ]
  },
  "dependencies": {
    "codesandbox-api": "^0.0.23",
    "codesandbox-import-utils": "^2.1.11",
    "goober": "nksaraf/goober#theme",
    "preact": "10.1.0",
    "preact-compat": "^3.19.0",
    "smooshpack": "*",
    "styled-system": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@pika/web": "^0.4.2",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/styled-system": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "babel-plugin-import-pika-web": "0.0.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.0.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "monaco-editor": "^0.18.1",
    "monaco-editor-core": "^0.18.1",
    "monaco-languages": "^1.8.0",
    "prettier": "^1.19.1",
    "rxjs": "^6.5.3",
    "rxjs-compat": "^6.5.3",
    "serve": "^11.2.0",
    "typescript": "^3.7.3"
  }
}
